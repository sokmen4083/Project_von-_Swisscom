<mvc:View
    controllerName="com.swisscom.socialbee.plan.resourceplan.controller.Home"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc">
<Title text="SWISSCOM"
        level="H1"
        hAlign="middle"
        />  
    <Page
        id="page">
            
        <content >
            <GenericTile id="proj" press=".onProjPress" header="Project" >
                <TileContent>	
                    <ImageContent src="sap-icon://capital-projects" />
                </TileContent>

            </GenericTile>
            <GenericTile id="ma"  press=".onMitarbeiterPress" header="Mitarbeiter">
                <TileContent>
                    <ImageContent src="sap-icon://group"/>
                </TileContent>
            </GenericTile>

            <GenericTile id="kunde" press=".onKundePress" header="Kunde">
                <TileContent>
                    <ImageContent src="sap-icon://customer" />    
                </TileContent>
            </GenericTile>

            <GenericTile  press=".onCalendarPress" header="Planung">
                <TileContent>
                    <ImageContent src="sap-icon://appointment" />    
                </TileContent>
            </GenericTile>
            
        </content>

    </Page>
</mvc:View>
